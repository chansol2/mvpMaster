<div class="rcmd-item row d-none" id="r-party-drink">
  <div class="explore-more col-12 mb-3 text-end">
    <a href="/product/8303">술맛 달달 술잔 더보기 →</a>
  </div>

  <% for (let i = 0; i < 8; i++) { %>
  <div class="rcmd-product col-lg-3 col-md-3 col-sm-3 col-6 mb-5 ps-2 pe-1">
    <a
      class="product"
      href="/product/<%= spl_3[i].cate_id %>/detail?pid=<%= spl_3[i].id %>&o_url=<%= spl_3[i].org_url%>"
    >
      <div class="thumb">
        <img class="image" src="<%= spl_3[i].img_url %>" alt="product img" />
      </div>
      <div class="content">
        <p class="source"><%= spl_3[i].seller_nm %></p>
        <p class="p-title"><%= spl_3[i].prd_nm %></p>
        <div class="price"><%= spl_3[i].sales_price %>원</div>
      </div>
    </a>
  </div>
  <% } %>
</div>
